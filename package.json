{
  "name": "tic-tac-toe",
  "version": "1.0.0",
  "description": "Tic Tac Toe with Redux-like implementation and websockets",
  "main": "index.js",
  "scripts": {
    "start": "webpack-dev-server --progress --colors --port 8888",
    "test": "mocha --compilers js:babel-register --no-colors",
    "test watch": "mocha --compilers js:babel-register --no-colors --watch",
    "compile" : "babel ./scripts/game.js --out-file ./scripts/game-compiled.js && babel ./scripts/helpers.js --out-file ./scripts/helpers-compiled.js && babel ./scripts/initboard.js --out-file ./scripts/initboard-compiled.js && babel ./scripts/move.js --out-file ./scripts/move-compiled.js && babel ./scripts/mutate.js --out-file ./scripts/mutate-compiled.js && babel ./scripts/won.js --out-file ./scripts/won-compiled.js",
    "sockets": "babel socket.js --out-file socket-compiled.js && node socket-compiled.js",
    "compile-bot": "babel ./scripts/bot.js --out-file ./scripts/bot-compiled.js",
    "bot" : "babel ./scripts/bot.js --out-file ./scripts/bot-compiled.js && node ./scripts/bot-compiled.js"
  },  
  "repository": {
    "type": "git",
    "url": "git+https://github.com/harunsmrkovic/tic-tac-toe.git"
  },
  "author": "Harun Smrkovic + Vedad Sose",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/harunsmrkovic/tic-tac-toe/issues"
  },
  "homepage": "https://github.com/harunsmrkovic/tic-tac-toe#readme",
  "dependencies": {
    "jquery": "^2.2.4",
    "lodash": "^4.13.1",
    "redux": "^3.5.2",
    "socket.io": "^1.4.6",
    "socket.io-client": "^1.4.6",
    "webpack": "^1.13.1"
  },
  "devDependencies": {
    "babel": "^6.5.2",
    "babel-cli": "^6.9.0",
    "babel-core": "^6.9.1",
    "babel-loader": "^6.2.4",
    "babel-preset-es2015": "^6.9.0",
    "babel-register": "^6.9.0",
    "chai": "^3.5.0",
    "mocha": "^2.5.3",
    "webpack": "^1.13.1",
    "webpack-dev-server": "^1.14.1"
  }
}
